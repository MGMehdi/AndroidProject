<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSiemens"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".process.TabletPackagingActivity">

    <TextView
        android:id="@+id/tv_l_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Level control"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_l_manaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mode : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_l_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Manual value : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_l_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Output : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_l_setpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Setpoint : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_l_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Level : "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DBB2"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DBB3"
                android:textColor="@color/white" />


            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DBB24"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DBB26"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DBB28"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="DBB30"
                android:textColor="@color/white" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <EditText
                android:layout_marginTop="50dp"
                android:id="@+id/et_writeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:gravity="center_vertical"
                android:textAlignment="center" />

            <Button
                android:id="@+id/bt_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button"
                android:text="SEND" />
        </LinearLayout>
    </GridLayout>


    <Button
        android:id="@+id/bt_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_button"
        android:padding="20dp"
        android:text="CONNECT"
        android:textSize="18dp" />

</LinearLayout>